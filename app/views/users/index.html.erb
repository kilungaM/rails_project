<h1>All Users</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Location</th>
      <th>Reviews</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.location %></td>
        <td><%= user.reviews.count %></td>
        <td><%= link_to "View Profile", user_path(user), class: "btn btn-sm btn-primary" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<div class="text-center mt-4">
  <%= paginate @users %>
</div>